  "author": "Piotr Ole≈õ <piotrek.oles@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Realytics/fork-ts-checker-webpack-plugin/issues"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-spies": "^0.7.1",
    "coveralls": "^2.11.15",
    "cross-env": "^4.0.0",
    "eslint": "^3.19.0",
    "karma": "^1.3.0",
    "karma-chai": "^0.1.0",
    "karma-cli": "^1.0.1",
    "karma-coverage": "^1.1.1",
