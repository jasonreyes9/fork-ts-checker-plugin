/// package.json
{
  "name": "type-definitions-fixture",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "tsc": "tsc"
  },
  "devDependencies": {
    "fork-ts-checker-webpack-plugin": ${FORK_TS_CHECKER_WEBPACK_PLUGIN_VERSION},
    "typescript": "~3.8.0"
  }
}

/// tsconfig.json
{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["ES6", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "baseUrl": "./"
  },
  "include": ["./"],
  "exclude": ["node_modules"]
}

/// webpack.config.ts
import ForkTsCheckerWebpackPlugin from 'fork-ts-checker-webpack-plugin';

const config = {
  entry: './src/index.ts',
  plugins: [
    new ForkTsCheckerWebpackPlugin({
      async: 'invalid_value',
      typescript: {
        enabled: true
      }
    })
  ]
};
